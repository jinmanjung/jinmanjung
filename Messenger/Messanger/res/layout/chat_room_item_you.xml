<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	android:orientation="horizontal"
	android:paddingLeft="8.0dip"
	android:paddingTop="10.0dip"
	android:paddingRight="8.0dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<ImageView android:id="@+id/profile"
		android:src="@drawable/img_profile_default"
		android:layout_width="40.0dip"
		android:layout_height="40.0dip" />

	<LinearLayout android:orientation="vertical"
		android:paddingLeft="4.0dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

		<TextView android:id="@+id/nickname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="You"
			android:textAppearance="?android:textAppearance"
			android:textColor="@android:color/white" />

        <LinearLayout android:gravity="bottom"
			android:orientation="horizontal"
			android:paddingTop="2.0dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

            <LinearLayout android:background="@drawable/img_you_chat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minHeight="30.0dip">

                <TextView android:id="@+id/message"
                	android:autoLink="all"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:textAppearance"
					android:textColor="@android:color/black"
					android:maxWidth="160.0dip" />
            </LinearLayout>

            <LinearLayout
				android:gravity="center_vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="-3.0dip"
				android:layout_marginBottom="5.0dip" >

				<LinearLayout android:gravity="center_vertical"
					android:orientation="horizontal"
					android:background="@drawable/img_chat_bg_info_r"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" >

					<TextView android:id="@+id/time"
						android:paddingLeft="1.0dip"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="12:30"
						android:textAppearance="?android:textAppearanceSmall"
						android:textSize="12.0dip"
						android:textColor="#ff94c0f1" />
						
		<!--  		<TextView android:id="@+id/count"
						android:paddingLeft="3.0dip"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="1"
						style="\@style/Widget.ChatUnreadTextView" />	-->
				</LinearLayout>
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>