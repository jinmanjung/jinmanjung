<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->

    <style name="CustomTitleBlack" parent="android:Theme">
        <item name="android:windowTitleSize">48dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackgroundBlack</item>
    </style>

    <style name="CustomTitleWhite" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/height2XtraHigh</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackgroundWhite</item>
    </style>

    <style name="CustomWindowTitleBackgroundBlack">
        <item name="android:background">#000000</item>
    </style>

    <style name="CustomWindowTitleBackgroundWhite">
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>